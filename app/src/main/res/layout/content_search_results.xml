<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SearchResultsActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_search_results">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dataLoad"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/srchReslts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Searching Products..."
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/noResults"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="NO Results found"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/totalResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Displaying results"
        android:visibility="gone"
        android:textStyle="bold"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myRecylerView"
        android:visibility="gone">



    </android.support.v7.widget.RecyclerView>

</LinearLayout>